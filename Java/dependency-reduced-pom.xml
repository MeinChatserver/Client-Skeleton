<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.chathoster</groupId>
  <artifactId>client</artifactId>
  <name>Mein Chatserver</name>
  <version>1.0.0</version>
  <description>Example Client for Mein-Chatserver.de</description>
  <url>https://mein-chatserver.de</url>
  <organization>
    <name>Mein Chatserver</name>
    <url>https://mein-chatserver.de</url>
  </organization>
  <build>
    <finalName>Client</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.0</version>
        <configuration>
          <source>${jdk.version}</source>
          <target>${jdk.version}</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.2.0</version>
        <configuration>
          <archive>
            <manifestEntries>
              <Build-Timestamp>${maven.build.timestamp}</Build-Timestamp>
              <Created-By>${user.name}</Created-By>
              <Application-Version>1.0.0</Application-Version>
              <Main-Class>Main</Main-Class>
              <Arguments>-host mein-chatserver.de -settings 0</Arguments>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
